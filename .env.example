# BiteSoft AI Document Generation System - Environment Variables

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# Database (PostgreSQL for production)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/bitesoft_ai

# Application
DEBUG=false
ENVIRONMENT=development
APP_NAME=BiteSoft AI Document Generation System
APP_VERSION=0.2.0

# JWT Authentication
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_ISSUER=
JWT_AUDIENCE=
JWT_PUBLIC_KEY=
ENABLE_AUTH_BYPASS=true

# CORS Configuration
# For production, set to specific origins: https://portal.example.com,https://app.example.com
CORS_ORIGINS=*

# PHI and Data Retention
STORE_FULL_AUDIT_DATA=true
REDACT_PHI_FIELDS=false
PHI_FIELDS_TO_REDACT=patient_name,practice_name
